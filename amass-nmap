import os,sys
val=input()
with open('myfile.txt',"w") as f:
    f.write(os.system(f"amass enum -d {val} -o domain.txt"))
f = open("domain.txt", "r+")
wf = open("sub_domain.txt","a")
(os.system(f"nmap -iL domain.txt -oX sub-domain.xml"))
os.system(f"cat sub-domain.xml | aquatone -nmap")
f.close()
wf.close()

